---
import ButtonLink from "@/components/ButtonLink.astro";
import Logo from "@/components/svg/Logo.astro";
import NavbarMenu from "@/components/NavbarMenu";
---

<nav class="fixed top-0 z-50 w-full border-b bg-white">
  <div
    class="container mx-auto flex max-w-6xl items-center justify-between px-4 py-4"
  >
    <Logo class="h-auto w-28" />
    <div class="hidden items-center gap-4 md:flex">
      <ButtonLink href="#home" variant="ghost" size="sm"> Inicio </ButtonLink>
      <ButtonLink href="#services" variant="ghost" size="sm"
        >Servicios</ButtonLink
      >
      <ButtonLink href="#projects" variant="ghost" size="sm">
        Proyectos</ButtonLink
      >
      <ButtonLink href="#contact" variant="ghost" size="sm">Contacto</ButtonLink
      >
    </div>

    <ButtonLink href="#contact" size="sm" class="hidden md:flex">
      Empieza tu proyecto
    </ButtonLink>

    <NavbarMenu client:load />
  </div>
</nav>
